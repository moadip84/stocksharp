<UserControl x:Class="StockSharp.Quik.Xaml.DdeSecurityChangesColumnsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
             xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:xaml1="clr-namespace:Ecng.Xaml;assembly=Ecng.Xaml" 
			 xmlns:xaml="clr-namespace:StockSharp.Quik.Xaml">
	<Grid>
		<xctk:DropDownButton HorizontalContentAlignment="Left">
			<TextBlock x:Name="ColumnsCount" Text="{x:Static loc:LocalizedStrings.XamlStr83}" Margin="3,0,0,0"/>
			<xctk:DropDownButton.DropDownContent>
				<xaml1:ResizableContentControl Width="600" Height="200">
					<xaml:DdeSecurityChangesColumnsPicker x:Name="ColumnsPicker"/>
				</xaml1:ResizableContentControl>
			</xctk:DropDownButton.DropDownContent>
		</xctk:DropDownButton>
	</Grid>
</UserControl>
